@model IEnumerable<ClientLocate.Models.Phone>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            AreaCode
        </th>
        <th>
            LocalNumber
        </th>
        <th>
            Extension
        </th>
        <th>
            PhoneType
        </th>
        <th>
            Person
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.AreaCode
        </td>
        <td>
			@item.LocalNumber
        </td>
        <td>
			@item.Extension
        </td>
        <td>
			@item.PhoneType
        </td>
        <td>
			@(item.Person == null ? "None" : item.Person.LastName)
        </td>
    </tr>
}

</table>


